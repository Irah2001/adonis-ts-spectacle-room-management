{
	"name": "showroom-management",
	"description": "A showroom management system built with AdonisJS and React.",
	"version": "0.0.0",
	"private": true,
	"type": "module",
	"license": "UNLICENSED",
	"scripts": {
		"start": "node bin/server.js",
		"build": "node ace build",
		"dev": "node ace serve --hmr",
		"test:chromium": "node ace test browser --browser=chromium",
		"test:firefox": "node ace test browser --browser=firefox",
		"test:webkit": "node ace test browser --browser=webkit",
		"test:functional": "node ace test functional",
		"test:all": "npm run test:functional && npm run test:chromium && npm run test:firefox && npm run test:webkit",
		"test": "node ace test",
		"test:coverage": "c8 node ace test",
		"lint": "eslint .",
		"lint-staged": "lint-staged",
		"format": "prettier --write .",
		"typecheck": "tsc --noEmit",
		"ace": "node ace",
		"postinstall": "husky"
	},
	"imports": {
		"#controllers/*": "./app/controllers/*.js",
		"#exceptions/*": "./app/exceptions/*.js",
		"#models/*": "./app/models/*.js",
		"#mails/*": "./app/mails/*.js",
		"#services/*": "./app/services/*.js",
		"#listeners/*": "./app/listeners/*.js",
		"#events/*": "./app/events/*.js",
		"#middleware/*": "./app/middleware/*.js",
		"#validators/*": "./app/validators/*.js",
		"#providers/*": "./providers/*.js",
		"#policies/*": "./app/policies/*.js",
		"#abilities/*": "./app/abilities/*.js",
		"#database/*": "./database/*.js",
		"#tests/*": "./tests/*.js",
		"#start/*": "./start/*.js",
		"#config/*": "./config/*.js",
		"#utils/*": "./utils/*.js",
		"#types/*": "./types/*.js",
		"#test-helpers/*": "./test-helpers/*.js"
	},
