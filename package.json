		"@japa/snapshot": "^2.0.8",
		"@swc/core": "^1.11.13",
		"@types/luxon": "^3.4.2",
		"@types/node": "^22.13.14",
		"@types/react": "^19.0.12",
		"@types/react-dom": "^19.0.4",
		"@typescript-eslint/parser": "^8.28.0",
