		"eslint-plugin-sonarjs": "^3.0.2",
		"eslint-plugin-unicorn": "^58.0.0",
		"globals": "^16.0.0",
		"hot-hook": "^0.4.0",
		"husky": "^9.1.7",
		"lint-staged": "^15.5.0",
		"pino-pretty": "^13.0.0",
		"prettier": "^3.5.3",
		"prettier-plugin-tailwindcss": "^0.6.11",
		"timekeeper": "^2.3.1",
		"ts-node-maintained": "^10.9.5",
